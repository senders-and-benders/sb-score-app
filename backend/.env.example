# Production Environment Variables Template
# Copy this to .env for production deployment

# Database Configuration
# For production (Heroku, Railway, etc.), use a full DATABASE_URL:
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Example for Heroku:
# DATABASE_URL=postgresql://user:pass@hostname:5432/dbname

# Example for Railway:
# DATABASE_URL=postgresql://postgres:password@containers-us-west-1.railway.app:6789/railway

# For local development with individual variables:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=climbing_scores_db
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
